<!DOCTYPE html>
<html>
<head>
    <title>Formulário Bootstrap</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .centered-form {
            display: flex;
            justify-content: center;
            align-items: center;
            
        }
    </style>
</head>
<body>

<div class="container centered-form">
    <div class="row">
        <div class="col-md-9 offset-md-0">
            <h2>Formulário</h2>
            <form action="save" method="post">
                <div class="form-group">
                    <label for="nome">Autor:</label>
                    <input type="text" class="form-control" id="autor" name="autor" placeholder="autor">
                </div>
                <div class="form-group">
                    <label for="email">descricao:</label>
                    <input type="text" class="form-control" id="descricao" name="descricao" placeholder="descricao">
                </div>
                <div class="form-group">
                    <label for="data">Data:</label>
                    <input type="date" class="form-control" id="data" name="data" >
                </div>
                <div class="form-group">
                    <label for="sentimento">sentimento:</label>
                    <input type="text" class="form-control" id="sentimento" name="sentimento"  placeholder="sentimento">
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
            <h1>LISTAGEM</h1>
          <p>Welcome to <%= title %></p>
          <h1>DELETE</h1>
          <form action="delete" method="post">
          <ul>
            <% for(let i=0; i<result.length; i++){ %>
              <li>
                <%= result[i].name %><%= result[i]._id %><button name="id" value = "<%= result[i]._id %>">Delete</button>
              </li>
            <%  } %>
         </ul>
        </form>
        <h1>UPDATE</h1>
        <form action="update" method="get">
          <ul>
            <% for(let i=0; i<result.length; i++){ %>
              <li>
                <%= result[i].name %><%= result[i]._id %><button name="id" value = "<%= result[i]._id %>">UPDATE</button>
              </li>
            <%  } %>
         </ul>
        </form>
        </div>
    </div>
</div>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
